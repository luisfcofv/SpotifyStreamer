<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/list_item_artist_imageview"
        android:layout_width="@dimen/image_thumbnail_width"
        android:layout_height="@dimen/image_thumbnail_height"
        android:layout_margin="@dimen/default_margin"
        android:contentDescription="@string/artist_image_description"/>

    <TextView
        android:id="@+id/list_item_artist_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:minHeight="?android:listPreferredItemHeight"
        android:gravity="center_vertical|start" />

</LinearLayout>
